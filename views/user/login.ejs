<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>登入</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h3>登入</h3>
        <form action="/user/login" method="post">
            <table>
                <tr>
                    <th><label for="username">用戶名稱: </label></th>
                    <td><input type="text" name="username" id="username" value="<%= locals.username %>" placeholder="輸入用戶名稱" required></td>
                </tr>
                <tr>
                    <th><label for="password">用戶密碼: </label></th>
                    <td><input type="password" name="password" value="<%= locals.password %>" placeholder="輸入用戶密碼" required></td>
                </tr>
                <tr>
                    <td colspan="2">
                         沒有戶口? 請先 <a href="/user/signup">登記</a>
                    </td>                
                </tr>
                <tr>
                    <td colspan="2">
                        <button type="submit">Go</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <%= locals.message %>
                    </td>
                </tr>
            </table>
        </form>

        <%- include('../partials/footer.ejs'); %>
    </div>

    <script>
        document.getElementById("username").focus();
    </script>
</body>
</html>